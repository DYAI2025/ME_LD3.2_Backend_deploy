# Glitch Environment Variables Template
# Copy this to .env on Glitch and fill in your values

# Server Configuration
PORT=3000
HOST=0.0.0.0

# MongoDB (Use MongoDB Atlas free tier)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/marker_engine?retryWrites=true&w=majority

# Redis (Use Upstash Redis free tier - optional)
# REDIS_URL=redis://default:password@redis-server.upstash.io:6379

# API Keys (Optional)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_CACHE=false
ENABLE_SPARK_NLP=false
ENABLE_STT=false

# Performance Settings (Optimized for Glitch's 512MB RAM)
MAX_WORKERS=2
MAX_UPLOAD_SIZE=10485760  # 10MB
BATCH_SIZE=50
CACHE_TTL=300

# Security
JWT_SECRET=your-secret-key-here
CORS_ORIGINS=https://your-project.glitch.me

# Monitoring (Optional)
# SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO