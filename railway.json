{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/Dockerfile.railway"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "docker-compose up",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "marker-engine-backend",
      "source": {
        "type": "docker",
        "image": "marker-engine-backend"
      },
      "deploy": {
        "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
        "numReplicas": 1,
        "region": "us-west1"
      },
      "variables": {
        "MONGODB_URL": "${{MONGODB_URL}}",
        "REDIS_URL": "${{REDIS_URL}}",
        "JWT_SECRET": "${{JWT_SECRET}}",
        "CORS_ORIGINS": "${{FRONTEND_URL}}",
        "ENVIRONMENT": "production"
      },
      "healthcheck": {
        "type": "http",
        "path": "/health",
        "port": 8000,
        "initialDelaySeconds": 30,
        "periodSeconds": 10
      }
    },
    {
      "name": "marker-engine-frontend",
      "source": {
        "type": "docker",
        "image": "marker-engine-frontend"
      },
      "deploy": {
        "startCommand": "npm start",
        "numReplicas": 1,
        "region": "us-west1"
      },
      "variables": {
        "NEXT_PUBLIC_API_URL": "${{BACKEND_URL}}",
        "NEXT_PUBLIC_WS_URL": "${{WEBSOCKET_URL}}"
      }
    },
    {
      "name": "marker-engine-mongodb",
      "source": {
        "type": "database",
        "engine": "mongodb",
        "version": "7.0"
      },
      "deploy": {
        "numReplicas": 1,
        "diskSizeGB": 10
      }
    },
    {
      "name": "marker-engine-redis",
      "source": {
        "type": "database",
        "engine": "redis",
        "version": "7.0"
      },
      "deploy": {
        "numReplicas": 1,
        "diskSizeGB": 1
      }
    }
  ],
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PYTHON_ENV": "production"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PYTHON_ENV": "staging"
      }
    }
  }
}